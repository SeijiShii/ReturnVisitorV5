<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dialog title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small"
            android:textColor="@color/textColorGray"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:text="@string/login_title"/>

        <!-- User Name Text -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small"
            android:background="@drawable/gray_trans_circle"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/textColorGray"
            android:id="@+id/user_name_text"
            android:hint="@string/user_name_hint"
            android:layout_margin="5dp"
            android:gravity="center_vertical|left"/>

        <!-- Password Text -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small"
            android:background="@drawable/gray_trans_circle"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/textColorGray"
            android:id="@+id/password_text"
            android:hint="@string/password_hint"
            android:layout_margin="5dp"
            android:gravity="center_vertical|left"/>

        <!-- Show Password Switch -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small">

            <net.c_kogyo.returnvisitorv5.view.RightTextSwitch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/show_password_switch"
                app:checked_text="@string/show_password"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_text"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_middle"
                android:gravity="center"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_height_small"
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Small" />

        </FrameLayout>

        <!-- Login Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small">

            <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/login_button"
                android:background="@drawable/trans_blue_selector"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/login_button"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <!-- Cancel Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_height_small">

            <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/close_button"
                android:background="@drawable/trans_orange_selector"
                android:textColor="@color/colorAccent"
                android:text="@string/close"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>